<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfridge">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo2"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.MyFridge">
        <activity android:name=".controllers.Profile" android:screenOrientation="portrait"></activity>
        <activity android:name=".controllers.FoodActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".controllers.Settings" android:screenOrientation="portrait"></activity>
        <activity android:name=".controllers.CookBook" android:screenOrientation="portrait"></activity>
        <activity android:name=".controllers.RecieptActivity" android:screenOrientation="portrait"></activity>

        <activity android:name=".controllers.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.FoodCardActivity" android:screenOrientation="portrait"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>